// https://www.typescriptlang.org/tsconfig#compilerOptions
{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "allowSyntheticDefaultImports": false,
    "allowUnreachableCode": false,
    "paths": {
      "@assets/*": ["./src/assets/*"],
      "@css/*": ["./src/css/*"],
      "@js/*": ["./src/js/*"],
      "@lib/*": ["./src/lib/*"],
      "@utils/*": ["./src/utils/*"]
    }
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
